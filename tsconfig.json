{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noEmit": true,
      "pretty": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "strictNullChecks": true,
      "lib": ["es5", "es6", "dom"],
      "jsx": "react",
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "strictPropertyInitialization": true,
      "baseUrl": "src"
    },
    "include": ["./src/*/", "webpack-prod.config.js", "webpack-dev.config.js"],
    "exclude": ["node_modules"]
}